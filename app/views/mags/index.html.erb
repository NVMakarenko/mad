<h2>Please, import location and magnetometer data</h2>

<div>
    <%=form_tag import_mags_path, multipart: true do%>
      <%= file_field_tag :file %>
      <%= file_field_tag :file1 %>
      <%= submit_tag "Import data"%>
    <%end%>
</div>
<div>

</div>
<%= flash[:notice]%>
<div>
  <%= line_chart [
    { name: "Magnetometer Data",
      data: Mag.group(:id).sum(:z), points: false},
    { name: "NORMAL_MAX",
      data: Mag.group(:id).sum(65), points: false},
    { name: "NORMAL_MIN",
      data: Mag.group(:id).sum(25), points: false, colors: ["#666"]}
  ]%>
</div>
<div>
  <table>
    <thead>
      <tr>
        <th>X - platform position</th>
        <th>Y - platform position</th>
        <th>Z - magnetometer data in this spot</th>
      </tr>
    </thead>
    <tbody>
      <%if @mags.first != nil%>
      <%mag_an_det = mad(@mags)%>
        <%mag_an_det.each do |mags|%>
          <tr>
              <td><%=mags.x %></td>
              <td><%=mags.y %></td>
              <td><%=mags.z %></td>
            </tr>
        <%end%>
      <%end%>
    </tbody>
  </table>
</div>
