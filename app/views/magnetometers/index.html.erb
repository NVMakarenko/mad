<h2>Please, import magnetometer data</h2>

<div>
    <%=form_tag import_magnetometers_path, multipart: true do%>
      <%= file_field_tag :file %>
      <%= submit_tag "Import magnetometer data"%>
    <%end%>
</div>

<%= flash[:notice]%>

<div>
  <h2>Magnetometer data chart</h2>
  <%= line_chart Magnetometer.group(:id).sum(:vector_mag),ytitle: "Vector, mT"%>
  <%= line_chart Magnetometer.group(:id).sum(:x_mag), ytitle: "X, mT"%>
  <%= line_chart Magnetometer.group(:id).sum(:y_mag), ytitle: "Y, mT"%>
  <%= line_chart Magnetometer.group(:id).sum(:z_mag), ytitle: "Z, mT"%>
  <table>
    <thead>
      <tr>
        <th>X</th>
        <th>Y</th>
        <th>Z</th>
        <th>Vector</th>
      </tr>
    </thead>
    <tbody>
      <%if @magnetometers.first != nil%>
      <%for i in 1..10 do%>
        <tr>
          <td><%=@magnetometers.find_by_id(i).x_mag %></td>
          <td><%=@magnetometers.find_by_id(i).y_mag %></td>
          <td><%=@magnetometers.find_by_id(i).z_mag %></td>
          <td><%=@magnetometers.find_by_id(i).vector_mag %></td>
        </tr
        <%end%>
      <%end%>
    </tbody>
  </table>
</div>
